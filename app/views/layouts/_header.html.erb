<header>
  <nav class="navbar navbar-expand-lg bg-body-tertiary"  style="background-color: #ffffe0;">
    <div class="container-fluid">
      <nav class="navbar bg-body-tertiary">
        <div class="container">
          <a class="navbar-brand" href="/">
            <%= link_to root_path do %>LOGO
            <%#= image_tag "logo.png", size:'200x80'%>
            <% end %>
          </a>
        </div>
      </nav>
      <div class ="d-flex flex-column">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto" style="list-style: none">
            <% if customer_signed_in? %>

            <!--カスタマーがログインしている時 -->
              <li class="nav-item">
                ようこそ、<%= current_customer.name %>さん！
              </li>
              <li class="nav-item">
                <%#= link_to "マイページ", my_page_path, class: "btn btn-outline-warning text-dark"  %>
              </li>
              <li class="nav-item">
                <%= link_to "About", about_path, class: "btn btn-outline-warning text-dark"  %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_customer_session_path, class: "btn btn-outline-warning text-dark" , method: :delete%>
              </li>
            <% elsif admin_signed_in? %>
              <!-- 管理者がログインしている時 -->
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_admin_session_path, class: "btn btn-outline-warning text-dark" , method: :delete %>
              </li>
            <% else %>
              <!-- ログインしていない時 -->
              <li class="nav-item">
                <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-outline-warning text-dark"  %>
              </li>
              <li class="nav-item">
                <%= link_to "About", about_path, class: "btn btn-outline-warning text-dark"  %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", new_customer_session_path, class: "btn btn-outline-warning text-dark"  %>
              </li>
            <% end %>
          </ul>
          <%= form_with class: 'd-flex' do |f| %>
            <%= f.text_field :content, placeholder: "検索..." %>
            <%= f.submit '検索', class: 'ml-1 btn btn-outline-warning flex-shrink-0' %>
          <% end %>
        </div>
    </div>
  </nav>
</header>