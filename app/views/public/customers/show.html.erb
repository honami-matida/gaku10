<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5">マイページ</h4>
      <div class="d-flex align-items-center">
        <h3><b>登録情報</b></h3>
      </div>
      <div>
        <%= image_tag @customer.get_profile_image(200,200), class:"profile_icon" %>
      </div>
      <table class="table table-bordered">
        <tr>
          <td class="bg-light">ニックネーム</td>
          <td><%= @customer.name %></td>
        </tr>
        <tr>
          <td class="bg-light">メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td class="bg-light">自己紹介文</td>
          <td><%= @customer.introduction %></td>
        </tr>
        <tr>
          <td class="bg-light">コメント</td>
          <td><%= "#{@customer.post_comments.count} コメント" %></td>
        </tr>
      </table>
      <% if customer_signed_in? && current_customer.id == @customer.id %>
        <%= link_to "編集する", profile_edit_public_customer_path, class:"btn btn-success ml-3" %>
      <% end %>
    </div>
    <div>
      <h3>会員の投稿一覧</h3>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>タイトル</th>
            <th>本文</th>
            <th>ジャンル</th>
            <th>アイコン</th>
            <th>投稿者</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td>
            </td>
            <td><%= link_to post.title, public_post_path(post) %></td>
            <td><%= post.introduction %></td>
            <td><%= post.genre.name %></td>
            <td><%= image_tag post.customer.get_profile_image(50,50), class:"icon" %></td>
            <td><%= post.customer.name %></td>
            <td><%#= render "favorites/btn", book: book %></td>
            <td>コメント数： <%= "#{post.post_comments.count} コメント" %></td>
          </tr>
         <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>