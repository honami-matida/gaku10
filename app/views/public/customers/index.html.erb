<h1>public/ustomers/indexページ</h1>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>アイコン</th>
      <th>名前</th>
      <th>紹介文</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td>
        <%= link_to profile_customer_path do %>
          <%= image_tag customer.get_profile_image(50,50) %>
        <% end %>
      </td>
      <td><%= link_to customer.name, profile_customer_path(customer) %></td>
      <td><%= customer.introduction %></td>
    </tr>
   <% end %>
   </tbody>
 </table>