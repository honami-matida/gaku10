<h1>会員一覧</h1>

<%=link_to "グループを作成する",new_public_group_path %> |
<%=link_to "グループ一覧",public_groups_path %>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>アイコン</th>
      <th>名前</th>
      <th>紹介文</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <% unless customer.guest_customer? %>
        <tr>
          <td>
            <%= link_to public_customer_path(customer), style:"text-decoration: none;" do %>
              <%= image_tag customer.get_profile_image(50,50), class:"icon" %>
            <% end %>
          </td>
          <td><%= link_to customer.name, public_customer_path(customer) %></td>
          <td><%= customer.introduction %></td>
        </tr>
      <% end %>
     <% end %>
     </tbody>
 </table>