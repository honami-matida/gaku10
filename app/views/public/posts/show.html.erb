<div>
  <p>タイトル：<%= @post.title %></p>
  <p>説明：<%= @post.introduction %></p>
  <p>ジャンル：<%= @post.genre.name %></p>
  <p>投稿ユーザー画像：<%= image_tag @post.customer.get_profile_image(100,100) %></p>
  <p>ユーザーネーム：<%= @post.customer.name %></p>
  <p>投稿日：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
</div>
<%= link_to "編集する", edit_public_post_path, class:"btn btn-success ml-3" %>
<% if @post.customer == current_customer %>
  <%= link_to "削除する", public_post_path(@post), method: :delete, class:"btn btn-success ml-3" %>
<% end %>