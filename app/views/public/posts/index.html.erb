<%= link_to '新しい順', public_posts_path(latest: "true") %>
|<%= link_to '古い順', public_posts_path(old: "true") %>
|<%= link_to '評価の高い順', public_posts_path(favorite_count: "true") %>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th>ジャンル</th>
      <th>アイコン</th>
      <th>投稿者</th>
      <th>投稿日時</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
        </td>
        <td><%= link_to post.title, public_post_path(post) %></td>
        <td><%= post.genre.name %></td>
        <td><%= image_tag post.customer.get_profile_image(50,50), class:"icon" %></td>
        <td><%= post.customer.name %></td>
        <td><%= post.customer.created_at.strftime('%Y/%m/%d') %></td>
        <td><%#= render "favorites/btn", book: book %></td>
        <td>コメント数： <%= "#{post.post_comments.count} コメント" %></td>
        <td>いいね数： <%= "#{post.favorites.count} いいね" %></td>
      </tr>
     <% end %>
   </tbody>
</table>

<%= paginate @posts, theme: 'bootstrap-5' %>