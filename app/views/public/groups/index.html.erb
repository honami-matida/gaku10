<div class="container">
  <div class="row py-3 mt-5">

    <h1>グループ一覧</h1>
    <table class='table'>
      <thead>
        <tr>
          <th></th>
          <th>グループ名</th>
          <th>紹介文</th>
          <th>オーナー</th>
          <th>オーナー名</th>
          <th>参加人数</th>
          <th></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @groups.each do |group| %>
          <tr>
            <td>
              <%= image_tag group.get_group_image(50,50), class:"icon" %>
            </td>
            <td><%= link_to group.name,public_group_path(group) %></td>
            <td><%= group.introduction %></td>
            <td><%= image_tag group.owner.get_profile_image(50,50), class:"icon" %></td>
            <td><%= group.owner.name %></td>
            <td><%= group.group_requests.approved.count %>人</td>
            <% if group.owner.id == current_customer.id %>
              <td><%= link_to '編集', edit_public_group_path(group), class: "group_#{group.id} btn btn-sm btn-info" %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= paginate @groups, theme: 'bootstrap-5' %>

  </div>
</div>