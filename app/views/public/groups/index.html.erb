<h1>グループ一覧</h1>
<table class='table'>
  <thead>
    <tr>
      <th></th>
      <th>グループ名</th>
      <th>紹介文</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td>
          <%= image_tag group.get_group_image(50,50), class:"icon" %>
        </td>
        <td><%= link_to group.name,public_group_path(group) %></td>
        <td><%= group.introduction %></td>
        <% if group.owner.id == current_customer.id %>
          <td><%= link_to 'Edit', edit_public_group_path(group), class: "group_#{group.id} btn btn-sm btn-success" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
