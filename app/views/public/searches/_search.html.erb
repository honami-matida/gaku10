<div class="search_form">
  <%= form_with url: public_search_path, local: true, method: :get do |f| %>
    <%= f.text_field :word %>
    <%= f.select :range, options_for_select([['customer'], ['post']]) %>
    <%= f.submit "検索", class: "btn btn-primary" %>
  <% end %>
</div>

<% if @model == 'customer' %>
    <h3>Customer search for "<%= @content %>"</h3>
  <%= render 'customers/inde', customers: @records %>
<% elsif @model == 'book' %>
    <h3>Books search for "<%= @content %>"</h3>
  <%= render 'homes/top', posts: @records %>
<% end %>