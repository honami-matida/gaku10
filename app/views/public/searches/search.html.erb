<% if @records.present? %>
  <table class="table table-hover table-inverse">
    <% if @model == 'customer' %>
      <h3>Customer search for "<%= @word %>"</h3>
        <thead>
          <tr>
            <th>アイコン</th>
            <th>名前</th>
            <th>紹介文</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @records.each do |customer| %>
            <tr>
              <td>
                <%= link_to profile_public_customer_path(customer) do %>
                  <%= image_tag customer.get_profile_image(50,50), class:"icon" %>
                <% end %>
              </td>
              <td><%= link_to customer.name, profile_public_customer_path(customer) %></td>
              <td><%= customer.introduction %></td>
            </tr>
          <% end %>
        </tbody>
    <% else %>
      <h3>Post search for "<%= @word %>"</h3>
      <thead>
        <tr>
          <th>タイトル</th>
          <th>文</th>
          <th>ジャンル</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @records.each do |post| %>
          <tr>
            <td><%= link_to post.title, public_post_path(post) %></td>
            <td><%= post.introduction %></td>
            <td><%= post.genre.name %></td>
          </tr>
        <% end %>
      </tbody>

    <% end %>
  </table>

  <%= paginate @records, theme: 'bootstrap-5' %>
<% else %>
  <p>検索結果がありません。</p>
<% end %>