<h2>ようこそ、がく10へ</h2>
<p>がく10は学童の先生同士で交流できるコミュニティサイトです</p>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th>本文</th>
      <th>ジャンル</th>
      <th>アイコン</th>
      <th>投稿者</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td>
      </td>
      <td><%= link_to post.title, public_post_path(post) %></td>
      <td><%= post.introduction %></td>
      <td><%= post.genre.name %></td>
      <td><%= image_tag post.customer.get_profile_image(50,50) %></td>
      <td><%= post.customer.name %></td>
      <td><%#= render "favorites/btn", book: book %></td>
      <td>コメント数： <%= "#{post.post_comments.count} コメント" %></td>
    </tr>
   <% end %>
   </tbody>
 </table>