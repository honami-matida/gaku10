<h1>グループ一覧</h1>

<table class='table'>
  <thead>
    <tr>
      <th></th>
      <th>グループ名</th>
      <th>紹介文</th>
      <th>オーナー</th>
      <th>オーナー名</th>
      <th>参加人数</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td>
          <%= image_tag group.get_group_image(50,50), class:"icon" %>
        </td>
        <td><%= link_to group.name,admin_group_path(group) %></td>
        <td><%= group.introduction %></td>
        <td><%= image_tag group.owner.get_profile_image(50,50), class:"icon" %></td>
        <td><%= group.owner.name %></td>
        <td><%= group.group_requests.approved.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @groups, theme: 'bootstrap-5' %>
