<h1>Admin::PostComments#show</h1>
<p>Find me in app/views/admin/post_comments/show.html.erb</p>

<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5">コメント詳細</h4>
      <table class="table table-borderless">
        <thead>
          <tr>
            <th>コメント日時</th>
            <th>コメント</th>
            <th>アイコン</th>
            <th>名前</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= @post_comment.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
            </td>
            <td>
              <%= @post_comment.comment %>
            </td>
            <td>
              <%= image_tag @post_comment.customer.get_profile_image(50,50), class:"icon" %>
            </td>
            <td>
              <%= link_to admin_customer_path(@post_comment.customer) do %>
                <%= @post_comment.customer.name %>
              <% end %>
            </td>
            <td>
              <%= link_to "削除する", admin_post_comment_path(@post_comment), method: :delete, class:"btn btn-success ml-3" %>
            </td>
          </tr>

        </tbody>
      </table>
    </div>
  </div>
</div>
