<h1>コメント一覧</h1>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>コメント日時</th>
      <th>コメント</th>
      <th>アイコン</th>
      <th>名前</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @post_comments.each do |post_comment| %>
      <tr>
        <td>
          <%= link_to admin_post_comment_path(post_comment) do %>
            <%= post_comment.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
          <% end %>
        </td>
        <td>
          <%= post_comment.comment %>
        </td>
        <td>
          <%= image_tag post_comment.customer.get_profile_image(50,50), class:"icon" %>
        </td>
        <td>
          <%= link_to admin_customer_path(post_comment.customer) do %>
            <%= post_comment.customer.name %>
          <% end %>
        </td>
      </tr>
   <% end %>
   </tbody>
 </table>

