<h1>Admin::Posts#show</h1>
<p>Find me in app/views/admin/posts/show.html.erb</p>

<div>
  <p>タイトル：<%= @post.title %></p>
  <p>説明：<%= @post.introduction %></p>
  <p>ジャンル：<%= @post.genre.name %></p>
  <p>投稿ユーザー画像：<%= image_tag @post.customer.get_profile_image(50,50), class:"icon" %></p>
  <p>ユーザーネーム：<%= @post.customer.name %></p>
  <p>投稿日：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
</div>

<%#= link_to "削除する", admin_post_path(@post), method: :delete, class:"btn btn-success ml-3" %>

<div>
  <p>コメント件数：<%= @post.post_comments.count %></p>
  <% @post.post_comments.each do |post_comment| %>
    <p><%= image_tag post_comment.customer.get_profile_image(50,50), class:"icon" %></p>
    <%= link_to admin_post_comment_path(post_comment) do %>
      <%= post_comment.customer.name %>
    <% end %>
    <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>

    <%#= link_to "削除", admin_post_post_comment_path(@post, post_comment), method: :delete, class: "btn btn-danger pull-right" %>
  <% end %>
</div>