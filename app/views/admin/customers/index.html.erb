<h1>Admin::Customers#index</h1>
<p>Find me in app/views/admin/customers/index.html.erb</p>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>アイコン</th>
      <th>名前</th>
      <th>紹介文</th>
      <th>会員ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td>
        <%= link_to admin_customer_path(customer) do %>
          <%= image_tag customer.get_profile_image(50,50) %>
        <% end %>
      </td>
      <td><%= link_to customer.name, admin_customer_path(customer) %></td>
      <td><%= customer.introduction %></td>
      <td>
        <% if customer.is_active %>
          <span class = "text-success">有効</span>
        <% else %>
          <span class = "text-secondary">退会</span>
        <% end %>
      </td>
    </tr>
   <% end %>
   </tbody>
 </table>
